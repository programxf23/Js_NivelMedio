let nombre = "Fer";
alert(nombre);

{
    let nombre = "Jorge";
    alert(nombre);
    {
        let nombre = "Mario";
        alert(nombre);
    }
}

//el control de flujo se daria a traves de:
if (3 > 2){
    alert(nombre); //y se ejecuta el bloque de codigo que queremos
}

//las sentencias de control de flijo son if, else if...porque controlamos el flujo a traves de estos condicionales

